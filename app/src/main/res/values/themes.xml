<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CoffeeShop" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowDisablePreview">true</item>
        <item name="fontFamily">@font/baloo_tamma2_regular</item>
    </style>

    <style name="Theme.CoffeeShop" parent="Base.Theme.CoffeeShop" />

    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundCornerImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="MyModernChip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/blue_700</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/black_10</item>
    </style>

    <style name="BottomNavTextAppearance" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BottomNavTextAppearance.Active" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textStyle">bold</item>
        <item name="android:selectedWeekBackgroundColor">@color/black_50</item>
    </style>

    <style name="BottomNavIndicator">
        <item name="android:color">@color/venilla_cream</item>  <!-- Selected background color -->
        <item name="android:width">50dp</item>
        <item name="android:height">40dp</item>
        <item name="shapeAppearance">@style/IndicatorShape</item>

    </style>

    <style name="IndicatorShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>

    </style>

</resources>