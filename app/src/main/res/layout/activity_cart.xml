<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_background"
    tools:context=".ui.cart.CartActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include
                    android:id="@+id/toolbar"
                    layout="@layout/view_back_toolbar" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:layout_constraintTop_toBottomOf="@id/toolbar" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="horizontal"
        android:background="@drawable/gray_full_corner_bg"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        tools:layout_editor_absoluteX="30dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:paddingStart="30dp"
            android:textSize="14sp"
            android:hint="Enter coupon"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/coffee_primary"
            android:paddingHorizontal="40dp"
            android:text="apply"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_topl_round_bg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvSubtotalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:text="subtotal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvSubtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:text="300"
                app:layout_constraintBottom_toBottomOf="@id/tvSubtotalLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvSubtotalLabel" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvSDeliveryChargeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery charges"
                app:layout_constraintStart_toStartOf="@id/tvSubtotalLabel"
                app:layout_constraintTop_toBottomOf="@id/tvSubtotalLabel" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvDeliveryCharges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300"
                app:layout_constraintBottom_toBottomOf="@id/tvSDeliveryChargeLabel"
                app:layout_constraintEnd_toEndOf="@id/tvSubtotal"
                app:layout_constraintTop_toTopOf="@id/tvSDeliveryChargeLabel" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTaxLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total tax"
                app:layout_constraintStart_toStartOf="@id/tvSDeliveryChargeLabel"
                app:layout_constraintTop_toBottomOf="@id/tvSDeliveryChargeLabel" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300"
                app:layout_constraintBottom_toBottomOf="@id/tvTaxLabel"
                app:layout_constraintEnd_toEndOf="@id/tvDeliveryCharges"
                app:layout_constraintTop_toBottomOf="@id/tvDeliveryCharges"
                app:layout_constraintTop_toTopOf="@id/tvTaxLabel" />

            <View
                android:id="@+id/horizontalLine"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginVertical="4dp"
                android:background="@color/coffee_primary"
                app:layout_constraintEnd_toEndOf="@id/tvTax"
                app:layout_constraintStart_toStartOf="@id/tvTaxLabel"
                app:layout_constraintTop_toBottomOf="@id/tvTaxLabel" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTotalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:text="Total tax"
                app:layout_constraintStart_toStartOf="@id/horizontalLine"
                app:layout_constraintTop_toBottomOf="@id/horizontalLine" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300"
                app:layout_constraintBottom_toBottomOf="@id/tvTotalLabel"
                app:layout_constraintEnd_toEndOf="@id/horizontalLine"
                app:layout_constraintTop_toTopOf="@id/tvTotalLabel" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="@color/coffee_primary"
            android:text="Proceed to check-out" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>